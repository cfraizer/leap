{
  "name": "Leap!",
  "version": "1.5",
  "description": "Website launcher which uses Omnibox",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "js/lib.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "img/leap.png",
    "popup": "popup.html"
  },
  "omnibox": { "keyword": "o" },
  "permissions": ["tabs"]
}
